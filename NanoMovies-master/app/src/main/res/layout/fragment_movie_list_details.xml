<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/movieDetails_header"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/movieDetailsImageView"
            android:contentDescription="movie poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:layout_margin="5dp"
            android:layout_gravity="left"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movieDetails_container"
            android:orientation="vertical"
            android:layout_gravity="right"
            >

                 <TextView
                     android:id="@+id/movieDetailsTitle"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_margin="5dp"
                    />

                 <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/movieDetails_container1"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    >

                    <TextView
                        android:id="@+id/movieDetailsRatingsLabel"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:text="@string/user_rating_label"
                        android:layout_gravity="left"
                        />

                    <TextView
                        android:id="@+id/movieDetailsRatings"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/movieDetails_container4"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    >

                    <TextView
                        android:id="@+id/movieDetailsPopularityLabel"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="@string/popularity_label"
                        />

                    <TextView
                        android:id="@+id/movieDetailsPopularity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"

                        />

                </LinearLayout>

                <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/movieDetails_container2"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                >

                <TextView
                    android:id="@+id/movieDetailsReleaseDateLabel"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="@string/release_date_label"
                    />

                <TextView
                    android:id="@+id/movieDetailsReleaseDate"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"

                    />

                </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/movieDetails_container3"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        >

        <TextView
            android:id="@+id/movieDetailsOverviewLabel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="@string/overview_label"
            />

        <TextView
            android:id="@+id/movieDetailsOverview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="left"
            android:padding="5dp"
            />

    </LinearLayout>

</LinearLayout>